<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/background_main_menu"
	tools:context=".MainActivity">

	<!-- 16 percent between horizontal lines -->

	<!-- GUIDE LINES HORIZONTAL -->

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/gl_hor_50"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintGuide_percent="0.5"
		app:layout_constraintStart_toStartOf="parent" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/gl_hor_34"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintGuide_percent="0.34"
		app:layout_constraintStart_toStartOf="parent" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/gl_hor_66"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintGuide_percent="0.66"
		app:layout_constraintStart_toStartOf="parent" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/gl_hor_82"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintGuide_percent="0.82"
		app:layout_constraintStart_toStartOf="parent" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/gl_hor_98"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintGuide_percent="0.98"
		app:layout_constraintStart_toStartOf="parent" />

	<!-- GUIDE LINES VERTICAL-->

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/gl_ver_10"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintGuide_percent="0.10"
		app:layout_constraintStart_toStartOf="parent" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/gl_ver_90"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintGuide_percent="0.90"
		app:layout_constraintStart_toStartOf="parent" />

	<!-- VIEW LINES -->

	<!--<View-->
	<!--android:layout_width="match_parent"-->
	<!--android:layout_height="8dp"-->
	<!--android:background_game="@color/ice_red"-->
	<!--app:layout_constraintBottom_toBottomOf="@id/gl_hor_50"-->
	<!--app:layout_constraintTop_toTopOf="@id/gl_hor_50" />-->

	<!--<View-->
	<!--android:layout_width="match_parent"-->
	<!--android:layout_height="8dp"-->
	<!--android:background_game="@color/ice_blue"-->
	<!--app:layout_constraintBottom_toBottomOf="@id/gl_hor_34"-->
	<!--app:layout_constraintTop_toTopOf="@id/gl_hor_34" />-->

	<!--<View-->
	<!--android:layout_width="match_parent"-->
	<!--android:layout_height="8dp"-->
	<!--android:background_game="@color/ice_blue"-->
	<!--app:layout_constraintBottom_toBottomOf="@id/gl_hor_66"-->
	<!--app:layout_constraintTop_toTopOf="@id/gl_hor_66" />-->

	<!-- MAIN HEADER -->

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/tv_title"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:elevation="100dp"
		android:fontFamily="@font/hockey_score_font"
		android:gravity="center"
		android:text="@string/app_name"
		android:textColor="@color/white"
		android:textSize="42sp"
		app:layout_constraintBottom_toTopOf="@id/gl_hor_34"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<!-- SUB HEADER -->

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/tv_sub_header"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:gravity="center"
		android:shadowColor="@color/white"
		android:shadowDx="0"
		android:shadowDy="0"
		android:shadowRadius="50"
		android:text="How To Play"
		android:textColor="@color/white"
		android:textSize="24sp"
		android:visibility="visible"
		app:layout_constraintBottom_toTopOf="@id/gl_hor_50"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/tv_title" />

	<!-- EASY MODE -->

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/btn_easy_mode"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintStart_toStartOf="@id/gl_ver_10"
		app:layout_constraintEnd_toEndOf="@id/gl_ver_90"
		app:layout_constraintBottom_toTopOf="@id/gl_hor_66"
		app:layout_constraintTop_toBottomOf="@id/gl_hor_50"
		android:padding="8dp"
		android:src="@drawable/button_easy_mode"/>

	<!-- HARD MODE (DEVELOPER AI) -->

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/btn_hard_mode"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:src="@drawable/button_hard_mode"
		android:padding="8dp"
		app:layout_constraintBottom_toTopOf="@id/gl_hor_82"
		app:layout_constraintEnd_toEndOf="@id/gl_ver_90"
		app:layout_constraintStart_toStartOf="@id/gl_ver_10"
		app:layout_constraintTop_toBottomOf="@id/gl_hor_66" />

	<!-- VS FRIEND-->

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/tv_vs_friend"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:fontFamily="@font/days_one"
		android:gravity="top"
		android:text="@string/vs_friend"
		android:textAlignment="center"
		android:textAllCaps="true"
		android:textColor="@color/darker_white"
		android:textSize="24sp"
		app:layout_constraintBottom_toTopOf="@id/gl_hor_98"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/gl_hor_82" />

</androidx.constraintlayout.widget.ConstraintLayout>