<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/background_main_menu"
	tools:context=".MainActivity">

	<!-- 16 percent between horizontal lines -->

	<!-- GUIDE LINES HORIZONTAL -->

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/gl_hor_34"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintGuide_percent="0.34"
		app:layout_constraintStart_toStartOf="parent" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/gl_hor_50"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintGuide_percent="0.48"
		app:layout_constraintStart_toStartOf="parent" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/gl_hor_66"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintGuide_percent="0.62"
		app:layout_constraintStart_toStartOf="parent" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/gl_hor_82"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintGuide_percent="0.76"
		app:layout_constraintStart_toStartOf="parent" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/gl_hor_98"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintGuide_percent="0.90"
		app:layout_constraintStart_toStartOf="parent" />

	<!-- GUIDE LINES VERTICAL-->

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/gl_ver_10"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintGuide_percent="0.15"
		app:layout_constraintStart_toStartOf="parent" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/gl_ver_90"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintGuide_percent="0.85"
		app:layout_constraintStart_toStartOf="parent" />

	<!-- MAIN HEADER -->

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/tv_title"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:elevation="100dp"
		android:fontFamily="@font/hockey_score_font"
		android:gravity="center"
		android:text="@string/app_name"
		android:textColor="@color/white"
		android:textSize="42sp"
		app:layout_constraintBottom_toTopOf="@id/gl_hor_34"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<!-- HOW TO PLAY -->

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/btn_how_to_play"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintStart_toStartOf="@id/gl_ver_10"
		app:layout_constraintEnd_toEndOf="@id/gl_ver_90"
		app:layout_constraintBottom_toTopOf="@id/gl_hor_50"
		app:layout_constraintTop_toBottomOf="@id/tv_title"
		android:src="@drawable/button_how_to_play"/>

	<!-- EASY MODE -->

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/btn_easy_mode"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintStart_toStartOf="@id/gl_ver_10"
		app:layout_constraintEnd_toEndOf="@id/gl_ver_90"
		app:layout_constraintBottom_toTopOf="@id/gl_hor_66"
		app:layout_constraintTop_toBottomOf="@id/gl_hor_50"
		android:src="@drawable/button_easy_mode"/>

	<!-- HARD MODE (DEVELOPER AI) -->

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/btn_hard_mode"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:src="@drawable/button_hard_mode"
		app:layout_constraintBottom_toTopOf="@id/gl_hor_82"
		app:layout_constraintEnd_toEndOf="@id/gl_ver_90"
		app:layout_constraintStart_toStartOf="@id/gl_ver_10"
		app:layout_constraintTop_toBottomOf="@id/gl_hor_66" />

	<!-- VS FRIEND-->

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/btn_multiplayer"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:src="@drawable/button_multiplayer"
		app:layout_constraintBottom_toTopOf="@id/gl_hor_98"
		app:layout_constraintEnd_toEndOf="@id/gl_ver_90"
		app:layout_constraintStart_toStartOf="@id/gl_ver_10"
		app:layout_constraintTop_toBottomOf="@id/gl_hor_82" />

</androidx.constraintlayout.widget.ConstraintLayout>