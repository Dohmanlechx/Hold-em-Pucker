		android:layout_margin="6dp"
		android:padding="1dp"
		android:scaleType="fitXY"
		app:layout_constraintBottom_toTopOf="@id/gl_hor_18"
		app:layout_constraintDimensionRatio="H,11:7"
		app:layout_constraintEnd_toStartOf="@id/gl_ver_75"
		app:layout_constraintStart_toEndOf="@id/gl_ver_45" />

	<View
		android:id="@+id/fading_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:alpha="0"
		android:background="@color/black"
		android:visibility="gone" />

	<!-- ALL FLIP VIEWS, TO OVERLAP -->

	<com.wajahatkarim3.easyflipview.EasyFlipView
		android:id="@+id/flip_top_goalie"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_margin="6dp"
		app:flipDuration="300"
		app:flipFrom="front"
		app:flipOnTouch="false"
		app:flipType="vertical"
		app:layout_constraintBottom_toTopOf="@id/gl_hor_18"
		app:layout_constraintDimensionRatio="H,11:7"
		app:layout_constraintEnd_toStartOf="@id/gl_ver_75"
		app:layout_constraintStart_toEndOf="@id/gl_ver_45">

		<!-- BACK -->
		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/flip_top_goalie_back"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="1dp"
			android:scaleType="fitXY" />

		<!-- FRONT -->
		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/flip_top_goalie_front"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="1dp"
			android:scaleType="fitXY" />

	</com.wajahatkarim3.easyflipview.EasyFlipView>

	<com.wajahatkarim3.easyflipview.EasyFlipView
		android:id="@+id/flip_btm_goalie"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_margin="6dp"
		app:flipDuration="300"
		app:flipFrom="back"
		app:flipOnTouch="false"
		app:flipType="vertical"
		app:layout_constraintDimensionRatio="H,11:7"
		app:layout_constraintEnd_toStartOf="@id/gl_ver_75"
		app:layout_constraintStart_toEndOf="@id/gl_ver_45"
		app:layout_constraintTop_toBottomOf="@id/gl_hor_82">

		<!-- BACK -->
		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/flip_btm_goalie_back"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="1dp"
			android:scaleType="fitXY" />

		<!-- FRONT -->
		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/flip_btm_goalie_front"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="1dp"
			android:scaleType="fitXY"
			tools:src="@drawable/red_back" />

	</com.wajahatkarim3.easyflipview.EasyFlipView>

	<!-- CARD DECK -->

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/cards_left"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="4dp"
		android:fontFamily="@font/faster_one"
		android:gravity="center"
		android:text="@string/full_card_deck_amount"
		android:textAlignment="center"
		android:textColor="@color/darker_red"
		android:textSize="22sp"
		app:layout_constraintBottom_toTopOf="@id/flip_view"
		app:layout_constraintEnd_toEndOf="@id/card_background"
		app:layout_constraintStart_toStartOf="@id/card_background" />

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/card_background"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_margin="6dp"
		android:padding="1dp"
		android:scaleType="fitXY"
		android:src="@drawable/red_back_vertical"
		app:layout_constraintBottom_toTopOf="@id/gl_hor_58"
		app:layout_constraintDimensionRatio="H,7:11"
		app:layout_constraintEnd_toStartOf="@id/gl_ver_20"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/gl_hor_42" />

	<com.wajahatkarim3.easyflipview.EasyFlipView
		android:id="@+id/flip_view"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_margin="6dp"
		app:flipDuration="150"
		app:flipFrom="right"
		app:flipOnTouch="false"
		app:flipType="horizontal"
		app:layout_constraintBottom_toTopOf="@id/gl_hor_58"
		app:layout_constraintDimensionRatio="H,7:11"
		app:layout_constraintEnd_toStartOf="@id/gl_ver_20"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/gl_hor_42">

		<!-- BACK -->
		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/card_picked"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="1dp"
			android:scaleType="fitXY" />

		<!-- FRONT -->
		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/card_deck"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="1dp"
			android:scaleType="fitXY" />

	</com.wajahatkarim3.easyflipview.EasyFlipView>

	<!-- WHOLE VIEW, FOR ONCLICK -->

	<View
		android:id="@+id/whole_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:visibility="gone" />

	<com.airbnb.lottie.LottieAnimationView
		android:id="@+id/lottie_trophy"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_gravity="center"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintDimensionRatio="H,1:1"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.3"
		app:lottie_autoPlay="false"
		app:lottie_fileName="trophy.json"
		app:lottie_loop="true" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/txt_winner"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:alpha="0"
		android:fontFamily="@font/press_start_2p"
		android:gravity="top|center"
		android:lineSpacingExtra="16dp"
		android:padding="16dp"
		android:textColor="@color/gold"
		android:textSize="24sp"
		android:visibility="gone"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/lottie_trophy"
		tools:text="Team Bottom won with 6-1!" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/txt_online_timer"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:fontFamily="@font/orbitron_bold"
		android:gravity="center"
		android:textColor="@color/red"
		android:textSize="26sp"
		app:layout_constraintBottom_toTopOf="@id/gl_hor_98"
		app:layout_constraintEnd_toEndOf="@id/gl_ver_20"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/gl_hor_82"
		tools:text="20" />

	<ProgressBar
		android:id="@+id/v_progressbar"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:backgroundTint="@color/red"
		android:visibility="gone"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>