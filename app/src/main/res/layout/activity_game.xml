		android:layout_height="0dp"
		android:layout_margin="6dp"
		android:background="@drawable/card_background_btm"
		app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_675"
		app:layout_constraintEnd_toEndOf="@id/guideline_vertical_70"
		app:layout_constraintStart_toEndOf="@id/guideline_vertical_50"
		app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_50" />

	<androidx.appcompat.widget.AppCompatImageView
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_margin="6dp"
		android:background="@drawable/card_background_btm"
		app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_675"
		app:layout_constraintEnd_toStartOf="@id/guideline_vertical_50"
		app:layout_constraintStart_toEndOf="@id/guideline_vertical_30"
		app:layout_constraintTop_toTopOf="@id/guideline_horizontal_50" />

	<androidx.appcompat.widget.AppCompatImageView
		android:layout_width="0dp"
		android:layout_height="0dp"
