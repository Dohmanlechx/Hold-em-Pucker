		android:layout_marginTop="32dp"
		android:layout_marginEnd="24dp"
		android:layout_marginBottom="6dp"
		android:background="@drawable/card_background_top"
		android:minHeight="8dp"
		app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_15"
		app:layout_constraintEnd_toEndOf="@id/guideline_vertical_80"
		app:layout_constraintStart_toEndOf="@id/guideline_vertical_40"
		app:layout_constraintTop_toTopOf="parent" />

	<!-- END OF PLACEHOLDERS -->

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/cards_left"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="4dp"
		android:fontFamily="@font/faster_one"
		android:gravity="center"
		android:textAlignment="center"
		android:textColor="@color/red"
		android:textSize="22sp"
		app:layout_constraintBottom_toTopOf="@id/flip_view"
		app:layout_constraintEnd_toEndOf="@id/card_background"
		app:layout_constraintStart_toStartOf="@id/card_background"
		tools:text="52" />

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/card_background"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginStart="16dp"
		android:layout_marginTop="6dp"
		android:layout_marginEnd="32dp"
		android:layout_marginBottom="6dp"
		android:scaleType="fitXY"
		android:src="@drawable/red_back_vertical"
		app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_5875"
		app:layout_constraintEnd_toEndOf="@id/guideline_vertical_30"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_4125" />

	<com.wajahatkarim3.easyflipview.EasyFlipView
		android:id="@+id/flip_view"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginStart="16dp"
		android:layout_marginTop="6dp"
		android:layout_marginEnd="32dp"
		android:layout_marginBottom="6dp"
		app:flipDuration="150"
		app:flipFrom="right"
		app:flipOnTouch="false"
		app:flipType="horizontal"
		app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_5875"
		app:layout_constraintEnd_toEndOf="@id/guideline_vertical_30"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_4125">

		<!-- BACK -->
		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/card_picked"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="fitXY" />

		<!-- FRONT -->
		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/card_deck"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="fitXY" />

	</com.wajahatkarim3.easyflipview.EasyFlipView>

